<div class="container{% if page.handle == 'faqs' %} faqs-page{% endif %}">
  <div class="page-spacer">
    <div class="page">
      {% comment %}
      <div class="side-page-wrap">
        <h1 class="h2 side-page-title text-center">{{ page.title }}</h1>
      </div>
      {% endcomment %}
      <h1 class="h2 text-center">{{ page.title }}</h1>
      {%- if page.content != empty -%}
        {% if page.handle == 'faqs' %}
          <div class="stack_accordian">{{ page.content }}</div>
        {% else %}
          <div class="prose">{{ page.content }}</div>
        {% endif %}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "class": "shopify-section--main-page",
  "tag": "section"
}
{% endschema %}