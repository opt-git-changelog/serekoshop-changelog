{% if section.blocks.size > 0 %}
  {% capture block_data %}
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}
        <div class="range_columns">
          <a{% if block.settings.link != blank %} href="{{ block.settings.link }}"{% endif %}>
            <img src="{{ block.settings.image | img_url:'342x' }}" title="{{ block.settings.image.alt | default:block.settings.title }}" alt="{{ block.settings.image.alt | default:block.settings.title }}">
            {% if block.settings.title != blank %}<h4>{{ block.settings.title }}</h4>{% endif %}
          </a>
        </div>
      {% endif %}
    {% endfor %}
  {% endcapture %}

  {% if block_data != blank %}
    <div {% render 'section-properties' %}>
      <div class="section-stack section-stack--center" id="range_section">
        {% if section.settings.title != blank %}
          <div class="prose text-center range-heading animate slideUp">
            <h2 class="h2 an-target">{{ section.settings.title }}</h2>
          </div>
        {% endif %}
        <div class="section-stack__main">
          <div class="range_box_wrapper">
            <div class="range_box">{{ block_data }}</div>
          </div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" id="range_section_arrow" width="725" height="474" viewBox="0 0 725 474" fill="none"><path d="M725 1H1V227.306V462H384.873" stroke="#8B89C2"/><g clip-path="url(#clip0_221_85)"><path d="M375.236 455.101C379.17 458.091 383.418 460.294 388.139 461.867C388.06 461.553 387.981 461.238 387.902 460.845C383.89 464.621 380.271 468.712 376.888 473.039C376.416 473.59 377.36 474.298 377.754 473.826C377.99 473.511 378.226 473.275 378.462 472.96C378.934 472.41 378.147 471.544 377.675 472.095C377.439 472.41 377.203 472.724 376.967 472.96C377.282 473.196 377.596 473.432 377.832 473.668C381.137 469.42 384.756 465.408 388.689 461.71C389.004 461.395 388.847 460.845 388.453 460.687C383.89 459.192 379.72 456.99 375.865 454.079C375.236 453.607 374.685 454.629 375.236 455.101Z" fill="#8B89C2"/></g><defs><clipPath id="clip0_221_85"><rect width="19.9831" height="13.8466" fill="white" transform="translate(375 473.983) rotate(-90)"/></clipPath></defs></svg>
        <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-class="LazyLoad" data-src="https://cdn.shopify.com/s/files/1/0691/8062/1113/files/our_rang_text_1.png?v=1673940546" id="range_left_texture" alt="texture">
        <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-class="LazyLoad" data-src="https://cdn.shopify.com/s/files/1/0691/8062/1113/files/our_rang_text_2.png?v=1673940547" id="range_right_texture" alt="texture">
      </div>
    </div>
  {% endif %}
{% endif %}

{% schema %}
  {
    "name": "Our range",
    "class": "shopify-section--our-range",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      }
    ],
    "blocks":[
      {
        "type":"image",
        "name":"Image with text",
        "limit":2,
        "settings":[
          {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
          },
          {
            "type":"text",
            "id":"title",
            "label":"Title"
          },
          {
            "type":"url",
            "id":"link",
            "label":"Link"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"Our range"
      }
    ]
  }
{% endschema %}